<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Central LEHA{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('bootstrap/css/bootstrap.css') }}" type="text/css" rel="stylesheet" />
			<link href="{{ asset('bootstrap/css/custom.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="navbar">
            <div class="navbar-inner">
                <ul class="nav">
				
                    <li><a href="{{ path('leha_dashboard_homepage') }}"><i class="icon_home" title="{% trans %}Accueil{% endtrans %}"></i></a></li>
                    <li class="dropdown">
                        <a href="{{ path('leha_historique') }}">
                            Historique
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            {% for requete in app.user.requetes %}
                                <li><a href="{{ path('leha_historique_search', {id : requete.id}) }}">{{ requete.libelle }}</a></li>
                            {% endfor %}

                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Administration
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="{{ path('leha_user_homepage') }}">Utilisateur</a></li>
                        </ul>
                    </li>
                </ul>
				<ul class="nav pull-right">
					<li class="dropdown">
						<a href="#"></a>
						<ul class="dropdown-menu">
                            <li><a href="{{ path('leha_usertest_security_logout') }}">{% trans %}Déconnexion{% endtrans %}</a></li>
							<li><a href="#">{% trans %}Paramètres{% endtrans %}</a></li>
                        </ul>
					</li>
				</ul>
            </div>

        </div>
        <div class="row-fluid">

            <div class="span8">
        {% block body %}{% endblock %}

            </div>
        </div>
        {% block javascripts %}
            <script src="{{ asset('bootstrap/js/jquery-1.9.1.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bootstrap/js/bootstrap.js') }}" type="text/javascript"></script>
			<script src="{{ asset('bootstrap/js/jquery-ui.min.js') }}" type="text/javascript"></script>
        {% endblock %}
    </body>
</html>
